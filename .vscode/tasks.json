{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "watch",
      "args": ["-w", "./src", "-i", "*.md", "-x", "run"],
      "problemMatcher": ["$rustc"],
      "label": "hot reload"
    },
    {
      "type": "cargo",
      "command": "watch",
      "args": ["-w", "./src", "-i", "*.md", "-x", "run -- --gui"],
      "problemMatcher": ["$rustc"],
      "label": "hot reload with gui"
    },
    {
      "type": "cargo",
      "command": "sweep",
      "args": ["--time", "1"],
      "problemMatcher": ["$rustc"],
      "label": "sweep (1 DAY)"
    }
  ]
}
